<html>
    <head>
        <title>Profile</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    </head>
    <body style = "background-image: url('https://professorslots.com/wp-content/uploads/2018/03/1-casino-632862-680.jpg'); background-size: cover;">
        <table class="table table-dark">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Details</th>
              <th scope="col">Information</th>
            </tr>
          </thead>
          <tbody>
                {% for x in [["id", user.id], ["name", user.name], ["username", user.uname], ["password", user.password], ["salary", user.salary], ["balance", user.balance], ["attendance", user.attendance], ["level", user.level], ["rating", user.rating]] %}
                    <tr>
                        <td>{{x[0]}}</td>
                        <td>{{x[1]}}</td>
                    </tr>
                {% endfor %}
                <tr>
                    <td>Update</td>
                    <td><a class="btn btn-primary" href="{{url_for('ruser', name=user.company.name, status=do)}}" role="button">Update Profile</a></td>
          </tbody>
        </table>
    </body>
</html>