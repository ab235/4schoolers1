<html>
    <head>
        <title>Dashboard</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    </head>
    <body style = "background-image: url('https://professorslots.com/wp-content/uploads/2018/03/1-casino-632862-680.jpg'); background-size: cover;">
        <h1 style="color: goldenrod;">Dashboard</h1>
        <a class="btn btn-primary" href="{{url_for('ruser', name=emps[0].company, status=do)}}" role="button" style="position: relative; left: 200px; top: -25px;">Add User</a>
        <table class="table table-dark">
          <thead class="thead-dark">
            <tr>
              <th scope="col">#</th>
              <th scope="col">Name</th>
              <th scope="col">Salary</th>
              <th scope="col">Pay</th>
              <th scope="col">Profile</th>
            </tr>
          </thead>
          <tbody>
            {% for user in emps %}
                <tr>
                    <td>{{user.id}}</td>
                    <td>{{user.name}}</td>
                    <td>{{user.salary}}</td>
                    <td><a class="btn btn-primary" href="{{url_for('pay', name=user.uname, cname=user.company.name)}}" role="button">Pay</a></td>
                    <td><a class="btn btn-primary" href="{{url_for('profile', name=user.uname, cname=user.company.name)}}" role="button">Profile</a></td>
                </tr>
            {% endfor %}
          </tbody>
        </table>
    </body>
</html>